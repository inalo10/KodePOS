@model KodePOSApps.ViewModels.KodePOS

@{
    ViewBag.Title = "Input Kode Pos";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header with-border">
                <h3>@Model.KodePOSInput.Form Kode POS Form</h3>
            </div>
            @using (Html.BeginForm("InputKodePOS", "Home", FormMethod.Post))
            {
                <div class="box-body">
                    @Html.HiddenFor(model => model.KodePOSInput.IDKodePOS)
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label class="bs-stepper-label">No. Kode POS</label>
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.KodePOSInput.NoKodePOS, new { @class = "form-control", required = "required", type = "number", placeholder = "No. Kode POS" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.NoKodePOS)
                        </div>
                        <div class="col-sm-2">
                            @Html.Label("Jenis ")
                        </div>
                        <div class="col-sm-4">
                            @Html.DropDownListFor(model => model.KodePOSInput.Jenis, ViewBag.JenisList as SelectList, "--Select Jenis--", new { @class = "form-control", required = "required", @id = "Jenis" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.Jenis)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            @Html.Label("Kelurahan ")
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.KodePOSInput.Kelurahan, new { @class = "form-control", required = "required", placeholder = "Kelurahan" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.Kelurahan)
                        </div>
                        <div class="col-sm-2">
                            @Html.Label("Kabupaten / Kota ")
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.KodePOSInput.Kabupaten, new { @class = "form-control", required = "required", placeholder = "Kabupaten" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.Kabupaten)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            @Html.Label("Kecamatan ")
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.KodePOSInput.Kecamatan, new { @class = "form-control", required = "required", placeholder = "Kecamatan" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.Kecamatan)
                        </div>
                        <div class="col-sm-2">
                            @Html.Label("Propinsi ")
                        </div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(model => model.KodePOSInput.Propinsi, new { @class = "form-control", required = "required", placeholder = "Propinsi" })
                            @Html.ValidationMessageFor(model => model.KodePOSInput.Propinsi)
                        </div>
                    </div>
                    <br />
                    <div class="form-group row pull-right">
                        <a href="/Home/Index" class="btn btn-danger"> Cancel</a>
                        <input type="submit" value="Save" class="btn btn-success" style="margin-left:4px;" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
