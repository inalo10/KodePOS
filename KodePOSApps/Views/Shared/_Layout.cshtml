<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ModalPopup")
    @Scripts.Render("~/bundles/General")
    @Scripts.Render("~/bundles/datatable")
    <script src="~/Content/bootstrap/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/AdminLTE")

    <!-- CSS -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/stepper/src/css")
    @Styles.Render("~/Content/themes/base/css")
    <link href="~/Content/datatable/datatables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/datatable/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link src="~/Content/font-awesome.css" rel="stylesheet">
    @Styles.Render("~/Content/admin-lte/css")
    @Styles.Render("~/Content/admin-lte/css/skins")

    <!--Favicon-->
    <link rel="icon" href="~/Content/admin-lte/img/avatar5.png">

</head>
<body class="skin-green-light sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="/Home/Index" class="logo">
                <span class="logo-mini">KPA</span>
                <span class="logo-lg">Kode POS Apps</span>
            </a>
            <nav class="navbar navbar-static-top">
                <div class="navbar-header">
                    <a href="/Home/Index" class="btn sidebar-toggle" data-toggle="push-menu" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu tree" data-widget="tree">
                    <li class="treeview">
                        <a href="/Home/Index">
                            <i class="fa fa-paper-plane"></i><span>KodePOS</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper" style="min-height: 1046px;">
            <section class="content">
                @RenderBody()
            </section>
        </div>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
